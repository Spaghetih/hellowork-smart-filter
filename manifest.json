{
  "manifest_version": 3,
  "name": "HelloWork Smart Filter",
  "description": "Masque les offres HelloWork contenant des entreprises blacklist√©es",
  "version": "1.1",
  "permissions": ["storage"],
  "host_permissions": ["*://*.hellowork.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.hellowork.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
